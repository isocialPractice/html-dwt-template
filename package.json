{
    "name": "html-dwt-template",
    "displayName": "HTML Dreamweaver Template",
    "description": "HTML template system that emulates Adobe Dreamweaver templating.",
    "publisher": "isocialPractice",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/isocialPractice/html-dwt-template.git"
    },
    "icon": "support/icon.png",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "adobe",
        "content",
        "dreamweaver",
        "dwt",
        "editable",
        "extension",
        "htm",
        "html",
        "php",
        "region",
        "repeatable",
        "site",
        "template",
        "templating",
        "vscode",
        "vscode-extension",
        "web",
        "website"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "dreamweaverTemplate.showEditableRegions",
                "title": "Show Editable Regions",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.syncTemplate",
                "title": "Update HTML Based on Template",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.toggleTemplateSync",
                "title": "Toggle Template Synchronization",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.findInstances",
                "title": "Find Template Instances",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.restoreBackup",
                "title": "Restore Last HTML Backup",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.insertRepeatEntryAfter",
                "title": "Insert Entry After Selection",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.insertRepeatEntryBefore",
                "title": "Insert Entry Before Selection",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.turnOffProtection",
                "title": "Turn Off Protection",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.turnOnProtection",
                "title": "Turn On Protection",
                "category": "Dreamweaver Template"
            },
            {
                "command": "dreamweaverTemplate.createPageFromTemplate",
                "title": "Create New Page from Template",
                "category": "Dreamweaver Template"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/",
                    "command": "dreamweaverTemplate.showEditableRegions",
                    "group": "dreamweaver"
                },
                {
                    "when": "resourceExtname == .dwt",
                    "command": "dreamweaverTemplate.syncTemplate",
                    "group": "dreamweaver"
                },
                {
                    "when": "resourceExtname == .dwt",
                    "command": "dreamweaverTemplate.findInstances",
                    "group": "dreamweaver"
                },
                {
                    "when": "resourceExtname == .dwt",
                    "command": "dreamweaverTemplate.createPageFromTemplate",
                    "group": "dreamweaver"
                },
                {
                    "command": "dreamweaverTemplate.restoreBackup",
                    "group": "dreamweaver"
                },
                {
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/",
                    "command": "dreamweaverTemplate.insertRepeatEntryAfter",
                    "group": "dreamweaver@1"
                },
                {
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/",
                    "command": "dreamweaverTemplate.insertRepeatEntryBefore",
                    "group": "dreamweaver@2"
                },
                {
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/",
                    "command": "dreamweaverTemplate.turnOffProtection",
                    "group": "dreamweaver@3"
                },
                {
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/",
                    "command": "dreamweaverTemplate.turnOnProtection",
                    "group": "dreamweaver@3"
                }
            ],
            "commandPalette": [
                {
                    "command": "dreamweaverTemplate.showEditableRegions",
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/"
                },
                {
                    "command": "dreamweaverTemplate.syncTemplate",
                    "when": "resourceExtname == .dwt"
                },
                {
                    "command": "dreamweaverTemplate.toggleTemplateSync"
                },
                {
                    "command": "dreamweaverTemplate.findInstances",
                    "when": "resourceExtname == .dwt"
                },
                {
                    "command": "dreamweaverTemplate.restoreBackup"
                },
                {
                    "command": "dreamweaverTemplate.insertRepeatEntryAfter",
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/"
                },
                {
                    "command": "dreamweaverTemplate.insertRepeatEntryBefore",
                    "when": "resourceExtname =~ /\\.(html|htm|php|asp|csp)$/"
                },
                {
                    "command": "dreamweaverTemplate.createPageFromTemplate",
                    "when": "resourceExtname == .dwt"
                }
            ]
        },
        "configuration": {
            "title": "Dreamweaver Template Protection",
            "properties": {
                "dreamweaverTemplate.enableProtection": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable protection of non-editable regions in Dreamweaver templates"
                },
                "dreamweaverTemplate.showWarnings": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show warning messages when trying to edit protected regions"
                },
                "dreamweaverTemplate.highlightEditableRegions": {
                    "type": "boolean",
                    "default": true,
                    "description": "Highlight editable regions with a green border"
                },
                "dreamweaverTemplate.highlightProtectedRegions": {
                    "type": "boolean",
                    "default": true,
                    "description": "Highlight protected regions with a red background"
                },
                "dreamweaverTemplate.autoSyncOnTemplateChange": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically sync template changes to instance files"
                },
                "dreamweaverTemplate.enableTemplateSync": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable template synchronization functionality"
                },
                "dreamweaverTemplate.confirmBeforeApply": {
                    "type": "boolean",
                    "default": true,
                    "description": "Ask for confirmation (with optional diff preview) before writing instance changes"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test:dw": "node scripts/test-harness.js",
        "test:guided": "node scripts/guided-walkthrough.js",
        "test:diff": "node scripts/smart-diff-checker.js"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.74.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "diff": "^8.0.2"
    }
}
